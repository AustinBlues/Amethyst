<%# app/views/layouts/application.erb %>

<!DOCTYPE html>
<html lang="en_us">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title><%= "#{ROOT}: #{@context}" %></title>

    <!-- Bootstrap -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <%= stylesheet_link_tag 'amethyst' %>
  </head>
  <body>
    <div id="header">
      <%= link_to ROOT, url_for(:home), id: 'logo' %>

      <% form_tag '/post/search', method: :get, class: 'form-inline d-flex', style: 'float: right' do %>
        <%= SEARCH_ICON %>&nbsp;
        <%= search_field_tag :search, placeholder: 'Search this website...' %>
	<%= hidden_field_tag(:origin, value: @origin) %>
      <% end %>
    </div>

    <div id="body" class="container" style="max-width:60em">
      <%= yield %>
    </div>
 
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/javascripts/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/javascripts/bootstrap.js"></script>
  </body>
</html>
