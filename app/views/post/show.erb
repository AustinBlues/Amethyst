<div class="card">
  <div class="card">
    <div class="card-header bg-warning">
      <a href="<%= url_for @origin %>" class="btn btn-link" style="display: inline; font-size: xx-large">
        &larr;
      </a>
      
      <h2 style="text-align:center"><%= link_to @post.title, @post.url %></h2>
    </div>
    <%= partial 'layouts/flash' %>

    <div class="card-body">
      <p class="card-text">
        <%== @post.description || '<b><em>Missing description</em></b>' %>
      </p>
    </div>
  </div>
</div>

