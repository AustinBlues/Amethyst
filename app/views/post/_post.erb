<% hide_url = url_for(:post, :hide, id: post.id, origin: @origin) %>
<% down_url = url_for(:post, :down, id: post.id, origin: @origin) %>


<tr id="post<%= post.id %>">
  <td>
    <%= link_to(post.name, url_for(:post, :show, id: post.id, origin: @origin), class: post_classes(post),
	  title: @datetime_only ? "#{short_datetime(post.published_at)}" : "#{post.feed.name}  #{short_datetime(post.published_at)}") %>
  </td>
  <td style="width: 3em">
    <div>
      <%= link_to(TIMES, hide_url, method: :put, class: 'btn btn-link action', style: 'padding: 0') %>
      <%= link_to(DOWN_ARROW, down_url, method: :put, class: 'btn btn-link action', style: 'padding: 0') %>
    </div>
  </td>
</tr>
