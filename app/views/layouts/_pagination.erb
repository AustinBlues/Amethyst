    <% if !ENV['TOP_PAGINATION'] %>
      <hr style="height: 0; margin: 0; border: 1px solid; color: #DDD">
    <% end %>

    <div style="font-size: x-large; text-align: center">
      <% url = url_for(view, :index) %>
      <% feed = feed_id.nil? ? '' : "feed_id=#{feed_id}&" %>
      <%= pagination.first_page? ? '<<' : link_to('<<', "#{url}?#{feed}page=1") %>
      <%= pagination.first_page? ? '<' : link_to('<', "#{url}?#{feed}page=#{pagination.prev_page}") %>
      <span style="font-size: large"> <%= "#{pagination.current_page} of #{pagination.page_count}" %> </span>
      <%= pagination.last_page? ? '>' : link_to('>', "#{url}?#{feed}page=#{pagination.next_page}") %>
      <%= pagination.last_page? ? '>>' : link_to('>>', "#{url}?#{feed}page=#{pagination.page_count}") %>
    </div>

    <% if ENV['TOP_PAGINATION'] %>
      <hr style="height: 0; margin: 0; border: 1px solid; color: #DDD">
    <% end %>
