      <!-- Modal content-->
      <div class="modal-content">
        <% form_for :feed, url(:feed, :create), :class => 'form-horizontal' do |f| %>
          <div class="modal-header">
            <h4 class="modal-title">Feed</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
	    </button>
          </div>

          <div class="modal-body">
	    <div class="form-group row">
	      <label for="rss_url" class="col-sm-2 col-form-label">URL:</label>
	      <div class="col-sm-10">
		<input type="text" class="form-control" name="rss_url">
	      </div>
	    </div>
          </div>

	  <div class="modal-footer">
	    <%= link_to 'Cancel', url_for(:feed, :index, page: @page), class: 'btn btn-default' %>
	    <%= f.submit 'Save', class: 'btn btn-primary' %>
	  </div>  
        <% end %>
      </div>
