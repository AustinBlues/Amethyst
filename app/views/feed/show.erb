<div class="card">
  <div class="card-header bg-info">
    <%= link_to LEFT_ARROW, url_for(:feed, :index, page: @options[:page]), title: 'to Feeds',
    	class: 'btn btn-link navigation' %>

    <button type="button" class="btn btn-default btn-lg"  data-toggle="modal" data-target="#deleteModal"
            aria-label="Delete" style="float:right">
      &minus;
    </button>

    <button type="button" class="btn btn-default btn-lg"  data-toggle="modal" data-target="#editModal"
        aria-label="Edit" style="float:right">
      <%= EDIT_PENCIL %>
    </button>
    
    <h2 class="card-title"><%= @context %></h2>

    <%= partial 'layouts/flash' %>
  </div>

  <% if @posts.current_page_record_count == 0 %>
    <h2 class="card-content" style="text-align: center">
      No posts
    </h2>
  <% else %>
    <%= partial('layouts/pagination', object: @posts) if (PAGINATION & POST_TOP) != 0 %>

    <table id="post" class="table table-striped">
      <tbody>
        <%= partial 'post/post', collection: @posts %>
      </tbody>
    </table>

    <%= partial('layouts/pagination', object: @posts) if (PAGINATION & POST_BOTTOM) != 0%>
  <% end %>

  <!-- Delete Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Delete <%= @context %> feed</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          This action cannot be undone.
	</div>
        <div class="modal-footer">
          <% form_tag url(:feed, :destroy, id: @feed[:id]), method: :delete do %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">cancel</button>
	    <%= submit_tag 'Delete', class: 'btn btn-danger btn-small' %>
	  <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Edit modal -->
  <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="editModalLabel">Edit: '<%= @context %>'</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <% form_tag url(:feed, :update, id: @feed[:id]), method: :put do %>
	    <div class="form-group">
	      <%= label_tag :title, class: 'control-label col-sm-2' %>
	      <div class="col-sm-8">
	        <%= text_field_tag :title, {value: @feed[:title], class: 'form-control'} %>
	      </div>
	    </div>
	    <div class="form-group">
	      <%= label_tag 'RSS URL', class: 'control-label col-sm-2' %>
	      <div class="col-sm-8">
	        <%= text_field_tag :rss_url, {value: @feed[:rss_url], class: 'form-control'} %>
	      </div>
	    </div>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">cancel</button>
	    <%= submit_tag 'Update', class: 'btn btn-danger btn-small' %>
	  <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
