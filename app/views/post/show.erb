<div class="card">
  <div class="card-header bg-info">
    <a href="<%= url_for @origin %>" class="btn btn-link">
      &larr;
    </a>
      
    <h2 class="card-title"><%= link_to @post.name, @post.url, target: '_blank' %></h2>

    <%= partial 'layouts/flash' %>
  </div>

  <div class="card-body">
    <p class="card-text">
      <%== @post.description || '<b><em>Missing description</em></b>' %>
    </p>
  </div>
</div>
